= form_for @my_rack do |f|
  = error_messages_for @my_rack
  .row
    .col-md-6
      .form-group
        = f.label :number
        = f.number_field :number
        = f.error_messages_for(:number)
    .col-md-6
      .form-group
        = f.label :places
        = f.number_field :places
        = f.error_messages_for(:places)
    .col-md-6
      .form-group
        = f.label :height
        = f.text_field :height
        = f.error_messages_for(:height)
    .col-md-6
      .form-group
        = f.label :width
        = f.text_field :width
        = f.error_messages_for(:width)
    .col-md-6
      .form-group
        = f.label :length
        = f.text_field :length
        = f.error_messages_for(:length)
    .col-md-6
      .form-group
        = f.label :max_weight
        = f.text_field :max_weight
        = f.error_messages_for(:max_weight)
    = f.fields_for :my_room do |ff|
      .col-md-6
        .form-group
          = ff.label :name
          = ff.text_field :name
          = ff.error_messages_for(:name)
      .col-md-6
        .form-group
          = ff.label :volume
          = ff.number_field :volume
          = ff.error_messages_for(:volume)
      .col-md-6
        .form-group
          = f.hidden_field :my_room_id
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
