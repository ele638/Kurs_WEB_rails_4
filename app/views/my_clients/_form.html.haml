= form_for @my_client do |f|
  = error_messages_for @my_client
  .row
    .col-md-6
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
        = f.error_messages_for(:name)
    .col-md-6
      .form-group
        = f.label :details
        = f.text_field :details, class: 'form-control'
        = f.error_messages_for(:details)
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
