= form_for @my_room do |f|
  = error_messages_for @my_room
  .row
    .col-md-6
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
        = f.error_messages_for(:name)
    .col-md-6
      .form-group
        = f.label :volume
        = f.text_field :volume, class: 'form-control'
        = f.error_messages_for(:volume)
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
